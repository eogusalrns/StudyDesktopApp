<Window x:Class="BlinkerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlinkerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="450" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnStarBlink" Content="" Background="red" Click="BtnStarBlink_Click" />
        <Button x:Name="BtnStopBlink" Content="" Grid.Column="1" Background="Green" Click="BtnStopBlink_Click"/>
        <Label Content="Start Blinking" Grid.Row="1"/>
        <Label Content="Stop Blinking" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
